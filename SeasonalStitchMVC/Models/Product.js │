// models/Product.js
const db = require('../db');

const Product = {
  getAll: (callback) => {
    const sql = 'SELECT * FROM products';
    db.query(sql, callback);
  },

  getById: (id, callback) => {
    const sql = 'SELECT * FROM products WHERE productId = ?';
    db.query(sql, [id], callback);
  },

  add: (data, callback) => {
    const sql = 'INSERT INTO products (name, category, price, image) VALUES (?, ?, ?, ?)';
    db.query(sql, [data.name, data.category, data.price, data.image], callback);
  },

  update: (id, data, callback) => {
    const sql = 'UPDATE products SET name=?, category=?, price=?, image=? WHERE productId=?';
    db.query(sql, [data.name, data.category, data.price, data.image, id], callback);
  },

  delete: (id, callback) => {
    const sql = 'DELETE FROM products WHERE productId = ?';
    db.query(sql, [id], callback);
  }
};

module.exports = Product;