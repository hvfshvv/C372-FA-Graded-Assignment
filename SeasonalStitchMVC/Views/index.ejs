<!DOCTYPE html>
<html>
<head>
    <title>Seasonal Stitch</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar">
        <a href="/" class="brand">Seasonal Stitch</a>
        <div class="nav-links">
            <a href="/">Home</a>
            <% if (user && user.role === 'admin') { %>
                <a href="/addHoodie" class="admin-btn">Add New Hoodie</a>
            <% } %>
            <% if (user) { %>
                <span style="color: #fff;">Welcome, <%= user.full_name %></span>
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/loginUser">Login</a>
            <% } %>
        </div>
    </nav>

    <div class="container">
        <% if (user && user.role === 'admin') { %>
            <div class="admin-header">
                <h2>Inventory Management</h2>
                <a href="/addHoodie" class="add-btn">+ Add New Hoodie</a>
            </div>
        <% } %>

        <div class="hoodies-grid">
            <% hoodies.forEach(hoodie => { %>
                <div class="hoodie-card">
                    <img src="/images/<%= hoodie.image_url %>" alt="<%= hoodie.name %>">
                    <div class="hoodie-info">
                        <h3><%= hoodie.name %></h3>
                        <p><%= hoodie.description %></p>
                        <p class="price">$<%= Number(hoodie.price).toFixed(2) %></p>
                        <p class="stock <%= hoodie.lowStock ? 'low-stock' : '' %>">
                            Stock: <%= hoodie.stock %>
                        </p>
                        <div class="season-tag"><%= hoodie.season %></div>
                        
                        <% if (user && user.role === 'admin') { %>
                            <div class="admin-controls">
                                <a href="/editHoodie/<%= hoodie.hoodie_id %>" class="edit-btn">Edit</a>
                                <a href="/deleteHoodie/<%= hoodie.hoodie_id %>" 
                                   class="delete-btn"
                                   onclick="return confirm('Are you sure you want to delete this item?')">
                                    Delete
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
